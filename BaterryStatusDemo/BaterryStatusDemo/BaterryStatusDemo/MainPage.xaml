<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BaterryStatusDemo"
             x:Class="BaterryStatusDemo.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        
        <Button x:Name="Batterybtn" Text="Battery" Clicked="Clicked_Battery" />

        <Label x:Name="ChargePercent" IsVisible="False"/>
        <Label x:Name="Status" IsVisible="False"/>
        <Label x:Name="Power" IsVisible="False"/>     
      
    </StackLayout>

</ContentPage>

    
    
    
    